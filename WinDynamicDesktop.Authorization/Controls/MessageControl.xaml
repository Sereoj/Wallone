<UserControl
    x:Class="WinDynamicDesktop.Authorization.Controls.MessageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WinDynamicDesktop.Authorization.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewmodels="clr-namespace:WinDynamicDesktop.Authorization.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MessageViewModel}"
    d:DesignHeight="40"
    d:DesignWidth="325"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Border
            Name="BorderMessageControl"
            Background="{ui:StaticResource SystemControlHighlightAltListAccentHighBrush}"
            CornerRadius="20">
            <TextBlock
                x:Name="Message"
                Margin="10,0,10,0"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="{ui:StaticResource SystemControlHighlightAltAltMediumHighBrush}"
                Text="{Binding Text}" />
        </Border>
    </Grid>
</UserControl>
