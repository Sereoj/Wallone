<UserControl
    x:Class="WinDynamicDesktop.UI.Views.Exceptions.NotFound"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WinDynamicDesktop.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewmodels="clr-namespace:WinDynamicDesktop.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:NotFoundViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="26"
            Text="Страница не найдена!" />
        <TextBlock
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            FontFamily="{StaticResource FontGardensC}"
            FontSize="20"
            Text="{Binding Text}"
            TextWrapping="Wrap" />
        <Button
            Width="162"
            Height="40"
            Margin="0,190,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Обновить"
            Style="{StaticResource AccentButtonStyle}" />
    </StackPanel>
</UserControl>
